# PollenPal API Environment Configuration
# Copy this file to .env and adjust values as needed

# Application Environment
POLLENPAL_ENV=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=3000
API_WORKERS=1
API_RELOAD=true

# Production API Configuration (when POLLENPAL_ENV=production)
PROD_API_HOST=0.0.0.0
PROD_API_PORT=8000
PROD_API_WORKERS=4
PROD_API_RELOAD=false

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/app/logs/pollenpal.log

# External API Configuration
POLLEN_API_BASE_URL=https://www.kleenex.co.uk
POLLEN_API_TIMEOUT=30
POLLEN_API_RETRIES=3

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://localhost"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]

# Database Configuration (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/pollenpal
# DATABASE_POOL_SIZE=10
# DATABASE_MAX_OVERFLOW=20

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_TIMEOUT=5
CACHE_TTL=300

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
SENTRY_DSN=

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Docker Configuration
DOCKER_REGISTRY=
DOCKER_TAG=latest

# Deployment Configuration
DEPLOYMENT_ENVIRONMENT=local
DEPLOYMENT_VERSION=0.1.0 